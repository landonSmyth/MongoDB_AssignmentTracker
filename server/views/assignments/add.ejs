<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for Add Assignment-->
<div class="container">
    <div class="row">
    <!--Displaying the form inputs for adding a database document-->
        <div class="col-md-offset-3 col-md-6">
            <h1 id="addEdit-header"><%= title %></h1>
            <form class="form" method="post">

            <div class="form-group">
                <input type="text" class="form-control" id="courseCodeTextField" 
                placeholder="Enter the course code" name="courseCode" required>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" id="dueDateTextField" 
                placeholder="Enter the due date" onfocus="(this.type='date')" name="dueDate" required>
            </div>

            <div class="form-group">
                <textarea type="text" class="form-control" id="descriptionTextField" 
                placeholder="Description of assignment/homework" name="description" required></textarea>
            </div>

            <div class="form-group">
                <textarea type="text" class="form-control" id="requirementsTextField"
                placeholder="Requirements of the assignment/homework" name="requirements" required></textarea>
            </div>

            <div class="form-group">
                <input type="number" class="form-control" id="numOfGroupMembers" 
                placeholder="Number of Group members (if none, enter zero)" name="groupMembers" required>
            </div>
            <br>
            <!--Submit and cancel buttons. If the user presses cancel, they are redirected to the main tracker page-->
            <button class="btn" style="background-color: rgb(6, 169, 22); color: black" type="submit">
                <i class="fas fa-edit"></i> Submit</button> 

                <a href="/assignment-tracker" class="btn" style="background-color: red; color: black">
                    <i class="fa-solid fa-ban"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>